FROM mcr.microsoft.com/dotnet/aspnet:6.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src

COPY "PriceAnalytics.sln" "PriceAnalytics.sln"
COPY "ApiGateways/PriceAnalytics.ApiGateway/PriceAnalytics.ApiGateway.csproj" "ApiGateways/PriceAnalytics.ApiGateway/PriceAnalytics.ApiGateway.csproj"
COPY "WebApps/PriceAnalytics.WebApp.Admin/PriceAnalytics.WebApp.Admin.csproj" "WebApps/PriceAnalytics.WebApp.Admin/PriceAnalytics.WebApp.Admin.csproj"
COPY "Tests/EndToEndTests/PriceAnalytics.EndToEndTests.csproj" "Tests/EndToEndTests/PriceAnalytics.EndToEndTests.csproj"
COPY "Sevices/Catalog/PriceAnalytics.Catalog.Domain/PriceAnalytics.Catalog.Domain.csproj" "Sevices/Catalog/PriceAnalytics.Catalog.Domain/PriceAnalytics.Catalog.Domain.csproj"
COPY "Sevices/Catalog/PriceAnalytics.Catalog.Infrastructure/PriceAnalytics.Catalog.Infrastructure.csproj" "Sevices/Catalog/PriceAnalytics.Catalog.Infrastructure/PriceAnalytics.Catalog.Infrastructure.csproj"
COPY "Sevices/Catalog/PriceAnalytics.Catalog.Application/PriceAnalytics.Catalog.Application.csproj" "Sevices/Catalog/PriceAnalytics.Catalog.Application/PriceAnalytics.Catalog.Application.csproj"
COPY "Sevices/Catalog/PriceAnalytics.Catalog.API/PriceAnalytics.Catalog.API.csproj" "Sevices/Catalog/PriceAnalytics.Catalog.API/PriceAnalytics.Catalog.API.csproj"
COPY "Sevices/Catalog/PriceAnalytics.Catalog.API.Http/PriceAnalytics.Catalog.API.Http.csproj" "Sevices/Catalog/PriceAnalytics.Catalog.API.Http/PriceAnalytics.Catalog.API.Http.csproj"
COPY "Sevices/Search/PriceAnalytics.Search.csproj" "Sevices/Search/PriceAnalytics.Search.csproj"
COPY "docker-compose.dcproj" "docker-compose.dcproj"

RUN dotnet restore "PriceAnalytics.sln"

COPY . .
WORKDIR /src/ApiGateways/PriceAnalytics.ApiGateway
RUN dotnet publish --no-restore -c Release -o /app

FROM build AS publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app .
ENTRYPOINT ["dotnet", "PriceAnalytics.ApiGateway.dll"]